<div class="jumbotron2">
  <div class="container">
    <div class="setup">
        <h1>Preview</h1>
        <div class="preview-window">
          <%= erb :notice_bar, :layout => false, :locals => locals %>
        </div>
      <div class="preview-input">
          <form action="/edit" method="post" class="preview-form">
            <p>Heading Text: <input id="heading_text" type="text" name="heading_text" value="<%= heading_text %>"><br></p>
            <p>Link Text: <input id="link_text" type="text" name="link_text" value="<%= link_text %>"></p>
            <p>Link Address: <input id="link_address" type="text" name="link_address" value="<%= link_address %>"></p>
            <input type="submit" class="savebutton" value="Save" />
          </form>
      </div>
    </div>
  </div>
</div>

<div class="learn-more">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h3>Easy to Install</h3>
        <p>Install yourself with our quick video, or have us do it for you</p>
        <p><a href="#">Set it up Now</a></p>
      </div>

      <div class="col-md-4">
        <h3>Sell More</h3>
        </p>Ensure Customers notice your sales and make them more likely to buy</p>
        <p><a href="#">Learn more</a></p>
      </div>

      <div class="col-md-4">
        <h3>Fully Customizable</h3>
        <p>No Coding Necessary, we let you fully personalize the Notice Bar whenever you want</p>
        <p><a href="#">Learn more about Personalization</a></p>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#heading_text').keyup( function() {
    $('#notice-bar-content')[0].innerHTML = $('#heading_text')[0].value + '<a href=' + $('#link_address')[0].value + '>' + $('#link_text')[0].value + '</a>'
  })

  $('#link_text').keyup( function() {
    $('#notice-bar-content')[0].innerHTML = $('#heading_text')[0].value + '<a href=' + $('#link_address')[0].value + '>' + $('#link_text')[0].value + '</a>'
  })

  $('#link_address').keyup( function() {
    $('#notice-bar-content')[0].innerHTML = $('#heading_text')[0].value + '<a href=' + $('#link_address')[0].value + '>' + $('#link_text')[0].value + '</a>'
  })
</script>
